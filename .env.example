# ============================================
# NsureCat MVP Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================
# Circle Developer Controlled Wallets
# ============================================
# Get these from Circle Developer Console: https://console.circle.com/
TEST_API_KEY=your_circle_test_api_key_here
ENTITY_SECRET=your_circle_entity_secret_here
WALLET_SET_ID=your_wallet_set_id_here

# ============================================
# ElevenLabs Voice AI (Optional)
# ============================================
# Get from: https://elevenlabs.io/
# Leave empty to disable voice features
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ============================================
# Arc Testnet Smart Contract (For Backend Engineer)
# ============================================
# These will be populated after contract deployment
# See: docs/backend/arc-testnet-deployment-requirements.md
ARC_RPC_URL=https://rpc-testnet.arbitrum.io
CONTRACT_ADDRESS=0x...
TREASURY_ADDRESS=0x...
USDC_ADDRESS=0x...

# Private key for backend wallet to sign transactions (KEEP SECRET!)
BACKEND_WALLET_PRIVATE_KEY=0x...

# ============================================
# OpenAI API (Optional - for enhanced AI agent)
# ============================================
# Get from: https://platform.openai.com/api-keys
# Leave empty to use mock shopper
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Server Configuration (Optional)
# ============================================
# Override defaults if needed
BACKEND_PORT=8000
FRONTEND_PORT=8001
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8001

# ============================================
# Development Configuration (Optional)
# ============================================
NSURECAT_ENV_NAME=nsurecat
PYTHON_VERSION=3.10
UVICORN_RELOAD=--reload
LOG_LEVEL=info

# ============================================
# Testing Configuration (Optional)
# ============================================
TEST_TIMEOUT=30000
PYTEST_ARGS=-v --tb=short
